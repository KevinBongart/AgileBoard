<ul class="breadcrumb">
  <%- if controller_name == 'sessions' %>
    <li class="active">Don't have an account yet?</li>
    <li><%= link_to "Sign up", new_registration_path(resource_name) %></li>
    <span class="divider">/</span>
    <li class="active">Forgot your password?</li>
    <li><%= link_to "No problem", new_password_path(resource_name) %>
  <% end %>

  <%- if controller_name == 'registrations' %>
    <li class="active">Already have an account?</li>
    <li><%= link_to "Sign in", new_session_path(resource_name) %></li>
    <span class="divider">/</span>
    <li class="active">Forgot your password?</li>
    <li><%= link_to "No problem", new_password_path(resource_name) %>
  <% end %>

  <%- if controller_name == 'passwords' %>
    <li class="active">Don't have an account yet?</li>
    <li><%= link_to "Sign up", new_registration_path(resource_name) %></li>
    <span class="divider">/</span>
    <li class="active">Already have an account?</li>
    <li><%= link_to "Sign in", new_session_path(resource_name) %></li>
  <% end %>
</ul>


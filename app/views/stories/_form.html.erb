<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description, :class => "xxlarge" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :project %>
    <div class="input">
      <%= select_tag "story[project_id]", options_from_collection_for_select(Project.all, "id", "name", @story.project_id) %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :stage %>
    <div class="input">
      <%= select_tag "story[stage_id]", options_from_collection_for_select(Stage.all, "id", "name", @story.stage_id) %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>
<% end %>
